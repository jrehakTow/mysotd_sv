<div class="modal-dialog">
  <div class = "modal-content">
<%- model_class = Item -%>
    <div class="modal-header">
      <h3>
        <%=t  @item.name %>
        <div class = "pull-right"><%= image_tag @item.equipment_picture(:thumb)%></div>
      </h3>
    </div>

    <div class = "modal-body"><dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @item.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:uses) %>:</strong></dt>
  <dd><%= @item.uses %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= number_to_currency(@item.price) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:purchase_date) %>:</strong></dt>
  <dd><%= @item.purchase_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:retired) %>:</strong></dt>
  <dd><%= @item.retired %></dd>
  <dt><strong><%= model_class.human_attribute_name(:category_id) %>:</strong></dt>
  <dd><%= @category.name %></dd>

</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              items_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_item_path(@item), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              item_path(@item),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
      </div>
    </div>
  </div>
